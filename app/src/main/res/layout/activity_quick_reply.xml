<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.coen268.invitenow.nishant.invitenowv20.QuickReplyActivity">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yes"
        android:id="@+id/YesButton"
        android:layout_alignTop="@+id/NoButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="YesButtonClicked"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No"
        android:id="@+id/NoButton"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="NoButtonClicked"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Later"
        android:id="@+id/LaterButton"
        android:layout_alignTop="@+id/NoButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="LaterButtonClicked"/>

</RelativeLayout>
